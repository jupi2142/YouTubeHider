{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.0",
  "homepage_url":
    "https://github.com/jupi2142/YouTubeHider",
  "icons": {
    "48": "icons/link-48.png"
  },

  "permissions": ["notifications", "activeTab", "contextMenus"],

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ],

  "default_locale": "en"
}
